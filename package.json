{
  "name": "macroweb",
  "scripts": {
    "prepare-output": "mkdir -p output",
    "copy-html": "cp -r src/html/* output/",
    "minify-js": "npx terser src/js/*.js -o output/js/",
    "minify-css": "npx cleancss -o output/css/style.min.css src/css/*.css",
    "gzip-data": "gzip -k src/data/*.json && mv src/data/*.json.gz output/data/",
    "build": "npm run prepare-output && npm run copy-html && npm run minify-js && npm run minify-css && npm run gzip-data"
  },
  "version": "1.0.0",
  "devDependencies": {
    "terser": "^5.39.0",
    "clean-css-cli": "^5.6.3"
  }
}
